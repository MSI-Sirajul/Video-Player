<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.videoplayer">

    <!-- পারমিশন সমূহ -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- ভিডিও প্লেব্যাক ক্যাপাবিলিটি ডিক্লেয়ার করুন -->
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Video Player"
        android:theme="@style/Theme.VideoPlayer">
        
        <!-- মেইন লঞ্চার অ্যাক্টিভিটি -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- প্লেয়ার অ্যাক্টিভিটি (আপডেট করা হয়েছে) -->
        <activity android:name=".PlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:launchMode="singleTop"
            android:theme="@style/Theme.VideoPlayer.FullScreen"
            android:screenOrientation="sensor"
            android:exported="true"> <!-- এটি true করা হয়েছে যাতে বাইরের অ্যাপ এক্সেস করতে পারে -->

            <!-- ভিডিও ফাইল খোলার জন্য প্রাইমারি ইনটেন্ট ফিল্টার -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- সমস্ত ধরনের ভিডিও ফাইল সাপোর্ট -->
                <data android:mimeType="video/*" />
                <data android:mimeType="application/mp4" />
                <data android:mimeType="application/x-mpegurl" />
                <data android:mimeType="application/vnd.apple.mpegurl" />
                <data android:mimeType="application/octet-stream" />
            </intent-filter>

            <!-- অডিও ফাইল খোলার জন্য অতিরিক্ত ইনটেন্ট ফিল্টার (ঐচ্ছিক) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                
                <!-- সমস্ত ধরনের অডিও ফাইল সাপোর্ট -->
                <data android:mimeType="audio/*" />
                <data android:mimeType="application/mpeg" />
                <data android:mimeType="application/ogg" />
                <data android:mimeType="application/x-ogg" />
                <data android:mimeType="application/octet-stream" />
            </intent-filter>

            <!-- ফাইল ম্যানেজার থেকে সরাসরি ফাইল খোলার জন্য -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                
                <!-- সব ধরনের ফাইল সাপোর্ট (যখন MIME টাইপ unknown) -->
                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.mp4" />
                <data android:pathPattern=".*\\.3gp" />
                <data android:pathPattern=".*\\.mkv" />
                <data android:pathPattern=".*\\.avi" />
                <data android:pathPattern=".*\\.flv" />
                <data android:pathPattern=".*\\.webm" />
                <data android:pathPattern=".*\\.m4v" />
                <data android:pathPattern=".*\\.mov" />
                <data android:pathPattern=".*\\.wmv" />
                <data android:pathPattern=".*\\.ts" />
                <data android:pathPattern=".*\\.mp3" />
                <data android:pathPattern=".*\\.m4a" />
                <data android:pathPattern=".*\\.aac" />
                <data android:pathPattern=".*\\.ogg" />
                <data android:pathPattern=".*\\.flac" />
                <data android:pathPattern=".*\\.wav" />
            </intent-filter>

            <!-- কনটেন্ট প্রোভাইডার থেকে ফাইল খোলার জন্য -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="content" />
                <data android:mimeType="*/*" />
                <data android:pathPattern=".*\\.mp4" />
                <data android:pathPattern=".*\\.3gp" />
                <data android:pathPattern=".*\\.mkv" />
                <data android:pathPattern=".*\\.mp3" />
                <data android:pathPattern=".*\\.m4a" />
            </intent-filter>

            <!-- HTTP/HTTPS ইউআরআই সাপোর্ট -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="video/*" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        
        <activity android:name=".SettingsActivity" android:theme="@style/Theme.VideoPlayer" android:screenOrientation="portrait"/>

        <!-- ফোল্ডার অ্যাক্টিভিটি -->
        <activity android:name=".FolderActivity" 
            android:screenOrientation="portrait"
            android:exported="false"/>

        <!-- ব্যাকগ্রাউন্ড প্লেব্যাক সার্ভিস -->
        <service android:name=".PlaybackService"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false">
        </service>

        <!-- মিডিয়া ব্রাউজ সার্ভিস (ঐচ্ছিক - উন্নত মিডিয়া প্লেব্যাকের জন্য) -->
        <service android:name=".MediaBrowserService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
    </application>
</manifest>