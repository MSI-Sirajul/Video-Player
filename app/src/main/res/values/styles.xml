<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_bg</item>
        <item name="android:textColor">@color/primary_text</item>
        
        <!-- Custom attributes for dynamic colors -->
        <item name="primary_bg">@color/primary_bg</item>
        <item name="secondary_bg">@color/secondary_bg</item>
        <item name="popup_bg">@color/popup_bg</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="secondary_text">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="ripple_color">@color/ripple_color</item>
    </style>

    <style name="Theme.VideoPlayer.FullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    
    <!-- Popup Menu Styles -->
    <style name="PopupMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:paddingVertical">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PopupMenuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/divider</item>
        <item name="android:layout_marginVertical">@dimen/_2sdp</item>
    </style>
    
    <!-- Settings Styles -->
    <style name="SettingsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/secondary_text</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SettingsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_settings_card</item> <!-- নিচে ড্রয়েবল দিচ্ছি -->
        <item name="android:paddingVertical">@dimen/_5sdp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    
    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/divider</item>
        <item name="android:layout_marginHorizontal">@dimen/_12sdp</item>
        <item name="android:alpha">0.5</item>
    </style>
  
    
    <!-- Settings Row Container -->
    <style name="SettingsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:paddingVertical">@dimen/_8sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Settings Icon (Left) -->
    <style name="SettingsIcon">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="tint">@color/primary_text</item>
    </style>

    <!-- Text Container (Middle) -->
    <style name="SettingsTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Title Text -->
    <style name="SettingsTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Description Text -->
    <style name="SettingsDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
    </style>

    <!-- Switch (Right) -->
    <style name="SettingsSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="thumbTint">@color/colorAccent</item>
    </style>
    
</resources>