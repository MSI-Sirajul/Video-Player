<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg">

    <!-- TOP BAR -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="@dimen/_12sdp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/primary_text"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toEndOf="@id/btn_back"/>
    </RelativeLayout>

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp">

            <!-- 1. SORT BY SECTION -->
            <TextView
                style="@style/SettingsHeader"
                android:text="SORT BY"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Name (A-Z / Z-A)"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_sort_name" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>
                
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Date (Newest)"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_sort_date" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Size (Largest)"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_sort_size" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Duration (Length)"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_sort_duration" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 2. VIEW MODE SECTION -->
            <TextView
                style="@style/SettingsHeader"
                android:text="VIEW MODE"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="List View"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_view_list" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Grid View"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_view_grid" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 3. DEFAULT HOME PAGE -->
            <TextView
                style="@style/SettingsHeader"
                android:text="DEFAULT HOME PAGE"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="All Videos"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_home_all" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Folder"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_home_folder" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 4. HIDE / SHOW FILES -->
            <TextView
                style="@style/SettingsHeader"
                android:text="HIDE / SHOW FILES"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Show Hidden Video"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_show_hidden" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Hide Short u.30s"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_hide_short" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 5. FILTER VIDEOS -->
            <TextView
                style="@style/SettingsHeader"
                android:text="FILTER VIDEOS"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="All Video"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_filter_all" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="MP4"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_filter_mp4" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="MKV"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_filter_mkv" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="3GP"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_filter_3gp" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="AVI"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_filter_avi" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 6. STORAGE -->
            <TextView
                style="@style/SettingsHeader"
                android:text="STORAGE"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Internal Storage"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_storage_internal" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="SD Card"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_storage_sd" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 7. THEME -->
            <TextView
                style="@style/SettingsHeader"
                android:text="THEME"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Auto (System Default)"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_theme_auto" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Dark Mode"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_theme_dark" style="@style/SettingsSwitch"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout style="@style/SettingsRow">
                    <TextView style="@style/SettingsText" android:text="Light Mode"/>
                    <androidx.appcompat.widget.SwitchCompat android:id="@+id/switch_theme_light" style="@style/SettingsSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- 8. OTHERS (Share & Info) -->
            <TextView
                style="@style/SettingsHeader"
                android:text="OTHERS"/>

            <LinearLayout style="@style/SettingsCard">
                <RelativeLayout 
                    android:id="@+id/btn_share_app"
                    style="@style/SettingsRow"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView style="@style/SettingsText" android:text="Share App"/>
                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_share"
                        app:tint="@color/secondary_text"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View style="@style/SettingsDivider"/>

                <RelativeLayout 
                    android:id="@+id/btn_app_info"
                    style="@style/SettingsRow"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView style="@style/SettingsText" android:text="App Info"/>
                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/secondary_text"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>