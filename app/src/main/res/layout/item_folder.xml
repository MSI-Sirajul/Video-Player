<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_4sdp"
    app:cardBackgroundColor="@color/secondary_bg"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical">

        <!-- Folder Icon -->
        <ImageView
            android:id="@+id/img_folder_icon"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_folder_tab"
            android:contentDescription="Folder"
            app:tint="@color/colorAccent"/>

        <!-- Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_12sdp">

            <!-- Folder Name -->
            <TextView
                android:id="@+id/tv_folder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Meta Info Row (Storage • Count • Size) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/tv_storage_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internal"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_9ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_9ssp"/>

                <TextView
                    android:id="@+id/tv_video_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Videos"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_9ssp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_9ssp"/>

                <TextView
                    android:id="@+id/tv_folder_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 MB"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_9ssp"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- Chevron/Arrow (Optional) -->
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/exo_icon_next" 
            app:tint="@color/secondary_text"
            android:alpha="0.5"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>